<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                             
                                                                               
           

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="layout/category_item_0"      xmlns:android="http://schemas.android.com/apk/res/android">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingTop="3dp"
                android:background="@android:color/holo_orange_light"
                android:padding="15dp" >

                <ImageView
                    android:tag="binding_1"                   
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_weight = "0.11"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="@android:dimen/app_icon_size"
                    android:id="@+id/imgcat"
                    />

                <TextView
                    android:tag="binding_2"                   
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imgcat"
                    android:textColor="@android:color/black"
                    android:id="@+id/category_name"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:tag="binding_3"                          
                    android:id="@+id/category_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_name"
                    android:layout_toEndOf="@+id/imgcat"
                    android:layout_toRightOf="@+id/imgcat"
                    android:layout_weight = "1"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>


        </LinearLayout>

         